<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proiect_tehnologii_mobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proiect_Tehnologii_Mobile">
        <activity
            android:name=".SongPlayListActivity"
            android:exported="false" />
        <activity
            android:name=".AddPlaylistActivity"
            android:exported="false" />
        <activity
            android:name=".AddToPlaylistActivity"
            android:exported="false" />
        <activity
            android:name=".ModifySongActivity"
            android:exported="false" />
        <activity
            android:name=".GenericVideoActivity"
            android:exported="false"
            android:parentActivityName=".AllSongsActivity" />
        <activity
            android:name=".GenericPlaylistVideoActivity"
            android:exported="false"
            android:parentActivityName=".PlaylistsActivity" />
        <activity
            android:name=".PlaylistsActivity"
            android:exported="false"
            android:label="Playlists"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AllSongsActivity"
            android:exported="false"
            android:label="All Songs"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="Settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddSongActivity"
            android:exported="false"
            android:label="@string/StringAddSong"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>